<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">

        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_toolbar_search_black_24dp</item>
        <item name="queryHint">@string/Search</item>
        <item name="android:imeActionId">6</item>
    </style>

</resources>
